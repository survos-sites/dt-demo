{% extends 'base.html.twig' %}

{% block body %}

    {% set posts = request_data('https://jsonplaceholder.typicode.com/posts') %}
    <twig:simple_datatables :data="posts" :perPage="5" :columns="posts[0]|keys">
        <twig:block name="id">
            {{ row.id }}
        </twig:block>
        <twig:block name="title">
            <i>{{ row.title }}</i>
        </twig:block>
    </twig:simple_datatables>

{% endblock %}
