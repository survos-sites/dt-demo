<div class="card h-100">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span class="fw-bold">{{ hit._highlightResult.category.value }}</span>
        <span class="badge bg-success">${{ hit.value|number_format }}</span>
    </div>

    <div class="card-body">
        <div class="blockquote">
            {{ hit._highlightResult.answer.value|raw }}
        </div>

        {% set _sc = 'reveal' %}
        <div data-controller="reveal" data-reveal-hidden-class="d-none">
            {# @todo: disappear when answer show.s #}
            <button {{ stimulus_action(_sc, 'toggle') }}
                data-reveal-target="item"
                class="btn btn-sm btn-primary mb-2">
                Show Answer
            </button>

            <div data-reveal-target="item" class="d-none mt-2">
                <div class="alert alert-info mb-0">{{ hit.question }}</div>
            </div>
        </div>
    </div>

    <div class="card-footer clearfix xxd-flex float-end xjustify-content-end">
        <div class="float-start">
            {{ hit.airDate|date('Y (D, M j)') }}
        </div>
        <span>
            {% if hit._rankingScore != 1 %}
                score: {{ hit._rankingScore|number_format(2) }}
            {% endif %}
        </span>
        <button
            data-action="survos--meili-bundle--json#modal"
            data-hit-id="{{ hit.id }}"
            class="float-end btn btn-sm btn-outline-primary">
            <span class="me-1 icon-wrapper">{{ icons.json|raw }}</span>
        </button>
    </div>
</div>

