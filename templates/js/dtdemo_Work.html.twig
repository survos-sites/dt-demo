{% set _sc = 'reveal' %}

{#<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">#}
{#    <div class="col">#}
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span class="fw-bold">{{ hit._highlightResult.title.value }}</span>
            </div>

            <div class="card-body">
                <div class="blockquote">
                    {{ hit._highlightResult.description.value|raw }}
                </div>
{#                <p class="card-text">#}
{#                    {{ hit._highlightResult.question.value|raw }}#}
{#                </p>#}

                {% set _sc = 'reveal' %}
                <div data-controller="reveal" data-reveal-hidden-class="d-none">
                    {# @todo: disappear when answer show.s #}
                    <button {{ stimulus_action(_sc, 'toggle') }}
                        data-reveal-target="item"
                        class="btn btn-sm btn-primary mb-2">
                        Details?
                    </button>

                </div>
            </div>

            <div class="card-footer clearfix xxd-flex float-end xjustify-content-end">
                <div class="float-start">
                    {{ hit._highlightResult.type.value }}
                </div>
                <span>
                    {% if hit._rankingScore != 1 %}
                    score: {{ hit._rankingScore|number_format(2) }}
                    {% endif %}
                </span>
                <button
                    data-action="survos--meili-bundle--json#modal"
                    data-hit-id="{{ hit.id }}"
                    class="float-end btn btn-sm btn-outline-primary">
                    <span class="me-1 icon-wrapper">{{ icons.json|raw }}</span>
                </button>
            </div>
        </div>
